# SOF test file - definition and retrieval tests

# basic def and retrieval
"3" x def
x . "3" = assert

# rebind possible
"hello" x def
x . "hello" = assert
# not old value
x . "3" /= assert

# bind other value
"a string" blah def
# sanity-check
blah . x . /= assert
blah . "a string" = assert

{
	# inside codeblocks, scope does not change
	x . "hello" = assert
} .

{
	# inside functions, scope changes
	"another" x def
	x . "another" = assert
} 0 function .
x . "hello" = assert

# globaldef
{
	"global" x globaldef
} 0 function .
x . "global" = assert

# binary operation rebind
3 n def
n 4 +
n . 7 = assert
n 2 *
n . 14 = assert
n -1 -
n . 15 = assert
n 3 /
n . 5 = assert
# not testing all of them, unnecessary

